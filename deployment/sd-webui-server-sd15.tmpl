apiVersion: apps/v1
kind: Deployment
metadata:
  name: sd-webui-server-sd15
spec:
  selector:
    matchLabels:
      component: sd-webui-server-sd15
  replicas: ${POD_REPLICAS_SD_WEBUI_SERVER}
  template:
    metadata:
      labels:
        component: sd-webui-server-sd15
    spec:
      nodeSelector:
        intent: gpu-machines
      volumes:
      - name: sd-webui-pv
        persistentVolumeClaim:
          claimName: ${PERSISTENT_VOLUME_CLAIM_NAME}
      containers:
      - name: sd-webui-server-sd15
        image: "$DOCKER_REGISTRY/$ECR_NAMESPACE/$SERVICE_NAME:$TAG"
        imagePullPolicy: Always
        tty: true
        command: 
        volumeMounts:
          - name: sd-webui-pv
            mountPath: /hf-home
            subPath: sd-webui-hf-home
          - name: sd-webui-pv
            mountPath: /stable-diffusion-webui/models/
            subPath: sd-webui-models
          - name: sd-webui-pv
            mountPath: /stable-diffusion-webui/extensions/sd-webui-controlnet/models
            subPath: sd-webui-controlnet-models
          - name: sd-webui-pv
            mountPath: /stable-diffusion-webui/repositories/CodeFormer/weights
            subPath: sd-webui-codeformer-models
        resources:
          requests:
            cpu: 7500m
            memory: 30Gi
          limits:
            cpu: 7500m
            memory: 30Gi
        env:
          - name: SD_VERSION
            value: "SD15"
            
---
apiVersion: v1
kind: Service
metadata:
  name: sd-webui-server-sd15
spec:
  type: ClusterIP
  selector:
    component: sd-webui-server-sd15
  ports:
  - protocol: TCP
    port: 80
    targetPort: 7860
