apiVersion: apps/v1
kind: Deployment
metadata:
  name: sd-webui-server
spec:
  selector:
    matchLabels:
      component: sd-webui-server
  replicas: ${POD_REPLICAS_SD_WEBUI_WORKER}
  template:
    metadata:
      labels:
        component: sd-webui-server
    spec:
      nodeSelector:
        intent: apps
      volumes:
      - name: sd-webui-pv
        persistentVolumeClaim:
          claimName: ${PERSISTENT_VOLUME_CLAIM_NAME}
      containers:
      - name: sd-webui-server
        image: "$DOCKER_REGISTRY/$ECR_NAMESPACE/$SERVICE_NAME:$TAG"
        imagePullPolicy: Always
        tty: true
        command: 
        volumeMounts:
          - name: sd-webui-pv
            mountPath: /stable-diffusion-webui/models/
            subPath: sd-webui-models
          - name: sd-webui-pv
            mountPath: /stable-diffusion-webui/extensions/sd-webui-controlnet/models
            subPath: sd-webui-controlnet-models
        resources:
          requests:
            cpu: 2000m
            memory: 6Gi
          limits:
            cpu: 2000m
            memory: 6Gi
   
---
apiVersion: v1
kind: Service
metadata:
  name: sd-webui-server
spec:
  type: ClusterIP
  selector:
    component: sd-webui-server
  ports:
  - protocol: TCP
    port: 80
    targetPort: 7860