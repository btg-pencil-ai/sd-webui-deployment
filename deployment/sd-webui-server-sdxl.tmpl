apiVersion: apps/v1
kind: Deployment
metadata:
  name: sd-webui-server-sdxl
spec:
  selector:
    matchLabels:
      component: sd-webui-server-sdxl
  replicas: ${POD_REPLICAS_SD_WEBUI_SERVER}
  template:
    metadata:
      labels:
        component: sd-webui-server-sdxl
    spec:
      nodeSelector:
        intent: gpu-machines
      volumes:
      - name: sd-webui-pv
        persistentVolumeClaim:
          claimName: ${PERSISTENT_VOLUME_CLAIM_NAME}
      containers:
      - name: sd-webui-server-sdxl
        image: "$DOCKER_REGISTRY/$ECR_NAMESPACE/$SERVICE_NAME:$TAG"
        imagePullPolicy: Always
        tty: true
        command: ["/bin/bash", "-c", "launch.sh"]
        volumeMounts:
          - name: sd-webui-pv
            mountPath: /hf-home
            subPath: sd-webui-hf-home
          - name: sd-webui-pv
            mountPath: /stable-diffusion-webui/models/
            subPath: sd-webui-models
          - name: sd-webui-pv
            mountPath: /stable-diffusion-webui/extensions/sd-webui-controlnet/models
            subPath: sd-webui-controlnet-models
          - name: sd-webui-pv
            mountPath: /stable-diffusion-webui/extensions/sd-webui-controlnet/annotator/downloads/clip_vision
            subPath: sd-webui-annotator-models
          - name: sd-webui-pv
            mountPath: /stable-diffusion-webui/repositories/CodeFormer/weights
            subPath: sd-webui-codeformer-models
        resources:
          requests:
            cpu: 5500m
            memory: 26Gi
          limits:
            cpu: 5500m
            memory: 26Gi
        env:
          - name: SD_VERSION
            value: "SDXL"
      - name: sd-webui-worker-sdxl
        image: "$DOCKER_REGISTRY/$ECR_NAMESPACE/$SERVICE_NAME:$TAG"
        imagePullPolicy: Always
        tty: true
        command: ["/bin/bash", "-c", "python3", "worker.py", "--worker", "sd_webui_worker_sdxl"]
        resources:
          requests:
            cpu: 2000m
            memory: 2Gi
          limits:
            cpu: 2000m
            memory: 2Gi
        env:
          - name: SD_VERSION
            value: "SDXL"
          - name: SD_WEBUI_API_ENDPOINT
            value: "http://localhost:7860"
          - name: RABBIT_URL
            value: "${RABBIT_URL}"
          - name: EXCHANGE_NAME
            value: "${EXCHANGE_NAME}"
